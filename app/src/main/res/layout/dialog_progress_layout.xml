<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_progress_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <ProgressBar
        android:id="@+id/progressbar_dpl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/secondary_text_color"/>

    <TextView
        android:id="@+id/tv_text_dpl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/montserrat_alt1_extra_bold"
        android:text="@string/loading"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textColor="@color/secondary_text_color"
        app:layout_constraintBottom_toBottomOf="@id/progressbar_dpl"
        app:layout_constraintStart_toEndOf="@id/progressbar_dpl"
        app:layout_constraintTop_toTopOf="@id/progressbar_dpl" />

</androidx.constraintlayout.widget.ConstraintLayout>